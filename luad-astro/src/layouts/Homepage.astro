---
import Card from "../components/Card.astro";
---

<body>
  <div class="Header">
    <h1>LUAD</h1>
    <p>The collection of Potterians' talents, one click at a time.</p>
  </div>
  <nav class="Navigation"></nav>
  <div class="Content" id="ContentList"></div>
</body>

<script>
  import { fetchFromFirestore } from "../lib/firestoreControls";

  const ContentList: HTMLElement = document.querySelector("#ContentList")!;

  interface ContentDocument {
    id: string;
    title: string;
    content: string;
    author?: string;
    isLargeCard?: boolean;
  }

  fetchFromFirestore("/content").then(
    (returnedCollection: ContentDocument[]) => {
      returnedCollection.map((returnedDocument: ContentDocument) => {
        ContentList.innerHTML =
          ContentList.innerHTML + `<Card title=${returnedDocument.title} />`;
      });
    }
  );
</script>

<style type="scss">
  .Header {
    width: 98%;
    height: 16em;
    background-image: url("../Assets/header.webp");
    background-size: cover;
    margin: 0.5em;
    border-radius: 0.5em;
  }
</style>
