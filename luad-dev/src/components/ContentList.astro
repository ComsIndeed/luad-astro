<template id="ContentCardTemplate">
  <a href="" class="ContentCard">
    <img
      src=""
      alt=""
      class="ContentCard-headerImage"
      width="160"
      height="90"
    />
    <h2 class="ContentCard-headerText"></h2>
  </a>
</template>

<div class="ContentList"></div>

<script>
  import { fetchFromFirestore } from "../lib/firestoreControls";
  import { getHydratedCollection } from "../lib/hydration";

  fetchFromFirestore("/content", undefined, false, true).then(
    (fetchedCollection) => {
      getHydratedCollection("ContentCardTemplate", fetchedCollection).forEach(
        (hydratedHTMLElement) => {
          document
            .querySelector(".ContentList")
            .appendChild(hydratedHTMLElement);
        }
      );
    }
  );
</script>

