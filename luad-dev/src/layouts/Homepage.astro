---
import ContentList from "../components/ContentList.astro";
import "animate.css";
---

<body>
  <!-- * HEADER *-->

  <div class="Header">
    <div class="defaultDisplay">
      <img class="mainLogo" src="luad.webp" height="150" width="150" />
      <h1 class="mainTitle">LUAD</h1>
      <p class="mainSubtitle">
        The collection of Potterians' talents, one click at a time.
      </p>
    </div>
    <button id="LearnMoreButton">Learn more</button>
  </div>

  <script>
    const HeaderElement = document.querySelector(".Header");

    document
      .querySelector("#LearnMoreButton")!
      .addEventListener("click", () => {
        if (HeaderElement!.classList.contains("onDisplay")) {
          HeaderElement?.classList.remove("onDisplay");
        } else {
          HeaderElement?.classList.add("onDisplay");
        }
      });
  </script>

  <style type="scss">
    @font-face {
      font-family: "Chunkfive";
      src: url("/Assets/chunkfive/Chunk.ttf");
    }

    .Header {
      width: 89%;
      padding: 3em 5%;
      height: 12em;
      background-image: url("header.webp");
      background-size: cover;
      border-radius: 0.5em;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      position: relative;
      z-index: 0;
      transition: all 0.75s;
      &::after {
        content: "";
        width: 100%;
        height: 100%;
        position: absolute;
        background-color: hsla(240, 100%, 17%, 0.75);
        z-index: 1;
        border-radius: 0.5em;
        transition: background-color 1s;
      }
    }
    .Header > .defaultDisplay,
    .Header > .defaultDisplay * {
      z-index: 2;
      text-align: center;
      color: white;
      transition: filter 0.5s;
    }
    .Header > .defaultDisplay .mainTitle {
      font-family: "Chunkfive";
      color: hsl(51, 100%, 70%);
      font-size: 3em;
      font-weight: 600;
      letter-spacing: -0.05em;
    }
  </style>
  <style type="scss">
    .Header.onDisplay {
      height: 70vh;

      .mainLogo,
      .mainTitle,
      .mainSubtitle {
        filter: opacity(0);
      }
      &::after {
        background-color: hsla(240, 100%, 17%, 0.95);
      }
    }
  </style>
  <style type="scss">
    .Header > button {
      z-index: 2;
      color: white;
      background-color: rgba(0, 0, 0, 0.25);
      position: absolute;
      padding: 0.5em;
      border: none;
      bottom: 5%;
      right: 2.5%;
      &:active {
        background-color: black;
        color: red;
      }
    }
  </style>

  <!-- * -->

  <nav class="Navigation">
    <a href="/">Home</a>
    <a href="/about">About</a>
    <input type="search" />
  </nav>

  <!-- * -->

  <div class="Content" id="ContentList">
    <ContentList />

